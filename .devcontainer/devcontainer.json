{
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode/main/extensions/configuration-editing/schemas/devContainer.vscode.schema.json",
  "name": "DartWing App",
  "dockerComposeFile": "docker-compose-with-adb.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.dart-code",
        "dart-code.flutter",
        "ms-vscode.vscode-json",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.theme-tomorrowkit",
        "PKief.material-icon-theme",
        "usernamehw.errorlens",
        "streetsidesoftware.code-spell-checker",
        "ms-azure-devops.azure-pipelines",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "localizely.flutter-intl",
        "Nash.awesome-flutter-snippets",
        "humao.rest-client",
        "ryanluker.vscode-coverage-gutters",
        "aaron-bond.better-comments",
        "mhutchie.git-graph",
        "github.vscode-pull-request-github",
        "vscode-icons-team.vscode-icons",
        "alexisvt.flutter-snippets",
        "robertbrunhage.flutter-riverpod-snippets",
        "felix.flutter-color",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "adelphes.android-dev-ext",
        // "DiemasMichiels.emulate",
        "yovelovadia.device-android-ios-launcher", // Uncomment to try device launcher extension
        "openai.chatgpt"
      ],
      "settings": {
        "dart.flutterSdkPath": "/opt/flutter",
        "dart.sdkPath": "/opt/flutter/bin/cache/dart-sdk",
        "dart.debugExternalPackageLibraries": true,
        "dart.debugSdkLibraries": false,
        "dart.lineLength": 120,
        "editor.rulers": [
          120
        ],
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit",
          "source.fixAll": "explicit"
        },
        "files.associations": {
          "*.dart": "dart"
        },
        "search.exclude": {
          "**/build/**": true,
          "**/.dart_tool/**": true,
          "**/ios/build/**": true,
          "**/android/build/**": true,
          "**/web/build/**": true
        },
        "files.exclude": {
          "**/.dart_tool": true,
          "**/build": true
        },
        "dart.insertArgumentPlaceholders": false,
        "dart.completeFunctionCalls": true,
        "dart.showTodos": true,
        "dart.enableSnippets": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "emulator.emulatorPath": "/opt/android-sdk/emulator/emulator",
        "emulator.adbPath": "/opt/android-sdk/platform-tools/adb",
        "terminal.integrated.shell.linux": "/bin/zsh"
      }
    }
  },
  "containerEnv": {
    "FLUTTER_ROOT": "/opt/flutter",
    "ANDROID_SDK_ROOT": "/opt/android-sdk",
    "ANDROID_HOME": "/opt/android-sdk",
    "ADB_SERVER_SOCKET": "tcp:adb-service:5037"
  },
  "mounts": [
    // "source=/mnt/c/Users/Brett/AppData/Local/Android/Sdk,target=/home/brett/Android/Sdk,type=bind"  // Commented out - using system Android tools instead
  ],
  "forwardPorts": [
    3000,
    8180,
    8000,
    // Note: No port 5037 - container connects to host ADB server
    5554,  // Emulator console port
    5555,  // Emulator ADB port
    42000,
    42001,
    42002,
    42003,
    42004
  ],
  "postCreateCommand": "sudo chsh -s /bin/zsh && flutter doctor -v && flutter pub get && echo 'Flutter app container ready! ADB service will handle emulator connection.'",
  "remoteUser": "brett"
}