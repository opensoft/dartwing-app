{
  "name": "DartWing App",
  "dockerComposeFile": "docker-compose-with-adb.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "overrideCommand": false,

  "initializeCommand": {
    "adb": "bash -c 'source .devcontainer/.env && ADB_INFRASTRUCTURE_PROJECT_NAME=$ADB_INFRASTRUCTURE_PROJECT_NAME ${localWorkspaceFolder}/../../../infrastructure/mobile/android/adb/scripts/start-adb-if-needed.sh'",
    "dartwingers-check": "${localWorkspaceFolder}/../../../infrastructure/mobile/android/adb/scripts/check-dartwingers-service.sh"
  },

  "onCreateCommand": {
    "setup-flutter-project": "echo 'Container created - Flutter setup will run on start'"
  },

  "postStartCommand": [
    "echo 'üöÄ Container started - initializing Flutter environment...'",
    "echo 'üîß Ensuring Dartwingers service dependency...' && ../../../infrastructure/mobile/android/adb/scripts/start-dartwingers-service-if-needed-minimal.sh",
    "flutter --version && echo '‚úÖ Flutter SDK ready' || echo '‚ö†Ô∏è  Flutter SDK not ready yet'",
    "adb devices && echo '‚úÖ ADB service connected' || echo 'üîÑ ADB service connecting...'",
    "timeout 300 .devcontainer/scripts/setup-flutter-project.sh && echo '‚úÖ Flutter project setup complete' || echo 'üîÑ Flutter setup running in background...'",
    "flutter doctor -v",
    "flutter pub get",
    "echo 'üéØ Ready for development!'"
  ],

  "postAttachCommand": ".devcontainer/scripts/ready-check.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",
        "github.copilot"
      ],
      "settings": {
        "dart.flutterSdkPath": "/opt/flutter",
        "dart.debugExternalLibraries": true,
        "dart.debugSdkLibraries": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "dart.showTodos": true,
        "dart.analysisExcludedFolders": [
          ".dart_tool",
          "build"
        ],
        "files.exclude": {
          "**/.git": true,
          "**/.DS_Store": true,
          "**/build": true,
          "**/.dart_tool": true
        },
        "dart.enableSdkFormatter": true,
        "dart.lineLength": 80,
        "dart.warnWhenEditingFilesOutsideWorkspace": true,
        "dart.flutterCreateAndroidLanguage": "kotlin",
        "dart.flutterCreateIOSLanguage": "swift",
        "terminal.integrated.shell.linux": "/bin/zsh"
      }
    }
  },
  "containerEnv": {
    "FLUTTER_ROOT": "/opt/flutter",
    "ANDROID_SDK_ROOT": "/opt/android-sdk",
    "ANDROID_HOME": "/opt/android-sdk",
    "ADB_SERVER_SOCKET": "tcp:adb-service:5037"
  },
  "forwardPorts": [
    3000,
    8180,
    8000,
    // Note: No port 5037 - container connects to host ADB server
    5554,  // Emulator console port
    5555,  // Emulator ADB port
    42000,
    42001,
    42002,
    42003,
    42004
  ]
}